{
    "entryFile": "./src/index.ts",
    "controllerPathGlobs": [
        "./src/**/*Controller.ts"
    ],
    "spec": {
        "outputDirectory": "./dist/",
        "basePath": "/api/v1",
        "securityDfinitions": {
            "keycloakLogin": {
                "type": "apiKey",
                "name": "authorization"
            },
            "keycloakAuth": {
                "type": "apiKey",
                "name": "authorization"
            }
        }
    },
    "swagger": {
        "specVersion": 3,
        "outputDirectory": "./dist/",
        "entryFile": "./src/index.ts"
    },
    "routes": {
        "outputDirectory": "./dist/",
        "basePath": "/api/v1",
        "entryFile": "./src/index.ts",
        "routesDir": "./src/routes/",
        "authenticationModule": "./src/middlewares/authentication.ts"
    }
}